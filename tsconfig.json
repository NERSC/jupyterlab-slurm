{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "ES6",
      "ES2016",
      "DOM"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES6",
    "types": [
      "jest"
    ],
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "src/*"
  ],
  "files": [
    "src/slurm-config/config.json"
  ]
}