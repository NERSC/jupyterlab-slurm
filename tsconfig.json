{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["ES6", "ES2016", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "target": "ES5",
    "types": []
  },
  "include": ["src/*"]
}
